def iterate_formula(x0, k):
    results = []
    xn = x0
    for n in range(1, k + 1):
        xn = 1 - 0.5 * xn
        results.append((n, xn))
    return results

def print_table(results):
    print("{:<5} {:<10}".format("n", "x_n"))
    print("------------------")
    for n, xn in results:
        print("{:<5} {:<10}".format(n, xn))

initial_value = 1
iterations = 25

results = iterate_formula(initial_value, iterations)
print_table(results)
